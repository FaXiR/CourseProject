<Window x:Class="CourseProject.Windows.AddDeal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject.Windows"
        mc:Ignorable="d"
        Title="Добавление дела" Height="124" Width="220" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите номер дела" Margin="4" x:Name="BusinessTextBlock"/>
            <TextBox x:Name="F_Deal" Margin="4"/>
        </StackPanel>
        <Button Click="AddButtonClick" Margin="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="24" Width="90">
            <StackPanel Orientation="Horizontal">
                <Image Source="/CourseProject;component/Resources/Add.png" Margin="0,0,4,0"/>
                <TextBlock Text="Добавить" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button Click="CanselButtonClick" Margin="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="24" Width="90">
            <StackPanel Orientation="Horizontal">
                <Image Source="/CourseProject;component/Resources/Delete.png" Margin="0,0,4,0"/>
                <TextBlock Text="Отмена" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>

</Window>
